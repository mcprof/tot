set completion-ignore-case on

# https://stackoverflow.com/questions/46161918/bash-vim-mode-instead-of-vi-mode
# want vi to be the default editor for readline                      
set editing-mode vi                                            

# vi settings                                         
$if mode=vi                
    ## normal mode                           
    # set keymap vi-command                                 
    # "j": beginning-of-history
    # "l": backward-char
    # "h": forward-char         
    # "G": end-of-history
    ## insert mode             
    set keymap vi-insert                          
    "jk": vi-movement-mode # remap escape
    "kj": vi-movement-mode # remap escape
$endif 
